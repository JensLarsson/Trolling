<Window x:Class="WpfApp1.PrintWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="PrintWindow" Height="450" Width="400" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Button Margin="0,2" Name="ButtonStartPrint" Click="ButtonStartPrint_Click">Print Scoreboard</Button>
            <Button Margin="0,2"  Name="PrintTeamInfo" Click="PrintTeamInfo_Click">Print Team Info</Button>
        </StackPanel>
        <StackPanel Grid.Column="1" >
            <CheckBox Margin="0,4"  Name="printFish">Scoreboard shows fishes</CheckBox>
            <CheckBox Margin="0,4"  Name="printPersonalInf">Print Contact Info</CheckBox>
        </StackPanel>
    </Grid>
</Window>
